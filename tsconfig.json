{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist/",
    "lib": ["es2017"],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "types"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "src/**/__tests__/**/*.test.ts"
  ]
}
